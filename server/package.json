{
  "name": "server",
  "version": "1.0.0",
  "description": "Cards Server",
  "main": "index.js",
  "author": "me",
  "license": "MIT",
  "scripts": {
    "dev": "yarn start",
    "start": "ts-node ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "test:unit": "yarn jest --selectProjects 'Unit tests' --runInBand",
    "test:system": "NODE_OPTIONS=\"--experimental-vm-modules --unhandled-rejections=warn-with-error-code\" yarn jest --selectProjects 'System tests' --runInBand",
    "test": "yarn typecheck && yarn lint && yarn format:check && yarn test:unit && yarn test:system",
    "format": "prettier --write './src/**/*.{js,ts,md,json}' --config ../.prettierrc",
    "format:check": "prettier --check './src/**/*.{js,ts,md,json}' --config ../.prettierrc",
    "lint": "eslint src/**/*.{js,ts,json}"
  },
  "private": true,
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@faker-js/faker": "^8.2.0",
    "colors": "^1.4.0",
    "dotenv-flow": "^4.0.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "prettier": "^3.0.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
